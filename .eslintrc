{
    "env": {
      "browser": true,
      "node": true
    },
    "extends": [
      "prettier",
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2020
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/no-inferrable-types": [
        0
      ],
      "valid-jsdoc": "off",
      "semi": [
        2,
        "always"
      ],
      "keyword-spacing": [
        "error",
        {
          "after": true
        }
      ],
      "comma-spacing": [
        "error",
        {
          "before": false,
          "after": true
        }
      ],
      "space-infix-ops": [
        "error",
        {
          "int32Hint": false
        }
      ],
      "eqeqeq": [
        2,
        "smart"
      ],
      "space-before-blocks": "error",
      "space-before-function-paren": [
        "error",
        {
          "anonymous": "always",
          "named": "never",
          "asyncArrow": "always"
        }
      ],
      "no-extra-boolean-cast": "off",
      "no-use-before-define": [
        "error",
        {
          "functions": true,
          "classes": true
        }
      ]
    }
  }